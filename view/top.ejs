<!-- 个人设置页 -->
<%-include header%>
  <div class="d-flex justify-content-center bg-secondary mt-3">
    <div class="col-8">
      <div class="bg-white  card">
        <div class="card-header breadcrumb mb-0">
          <span>
            <a href="/home">主页</a>
            <span class="divider">/</span>
          </span>
          <span class="active">TOP
            <%=topcount%>积分榜</span>
        </div>
        <table class="table table-striped">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">用户名</th>
              <th scope="col">积分</th>
              <th scope="col">主题数</th>
              <th scope="col">评论数</th>
            </tr>
          </thead>
          <tbody>
            <%tops.forEach(function(top,index){%>
              <tr >
                <th scope="row" class="py-1">
                  <%=index+1%>
                </th>
                <td class="py-1">
                  <a href="/user/<%=top['name']%>">
                    <img src="/images/7081645.png" width="30" height="30" alt="Generic placeholder image" />
                    <%=top['name']%>
                  </a>
                </td>
                <td class="py-1">
                  <%=top['integral']%>
                </td>
                <td class="py-1">
                  <%=top['topiccount']%>
                </td>
                <td class="py-1">
                  <%=top['replies']%>
                </td>
              </tr>
              <%})%>
          </tbody>
        </table>
      </div>

    </div>
    <div class="col-2.5">
      <% if(!session||!session.id){ %>
        <div class="bg-white pt-3 pl-3 pb-1">
          <p>CNode：Node.js专业中文社区 </p>
          <p>
            <small>您可以
              <a href="/onload" class="text-muted">登录</a>或
              <a href="/signin" class="text-muted">注册</a> , 也可以</small>
            </br>
            <a class="btn btn-primary" href="#" role="button">通过GitHub登陆</a>
          </p>
        </div>
        <% } %>
          <% if(session&&session.id){ %>
            <div class='card bg-white '>
              <div class='card-header  '>
                个人信息
              </div>
              <div class='card-body'>
                <div class='user_card'>
                  <div>
                    <a class='user_avatar' href="/user/<%=session.name%>">
                      <img src="/images/7081645.png" width="40" height="40" alt="Generic placeholder image" />
                    </a>
                    <span class='user_name'>
                      <a class='dark' href="/user/<%=session.name%>">
                        <%=session.name%>
                      </a>
                    </span>

                    <div class='board clearfix'>
                      <div class='floor'>
                        <span class='big'>积分:
                          <%=session.integral%>
                        </span>
                      </div>
                    </div>
                    <div class="space clearfix"></div>
                    <%if(session.sign===null){%>
                      <span class="signature font-italic">
                        “这家伙很懒，什么个性签名都没有留下。”
                      </span>
                      <%}%>
                        <%if(session.sign!=null){%>
                          <span class="signature font-italic">
                            <%=session.sign%>
                          </span>
                          <%}%>
                  </div>
                </div>
              </div>
            </div>
            <div class="panel">
              <div class='inner bg-white p-3 mt-3'>
                <a href='/topic/create' id='create_topic_btn'>
                  <button type="button" class="btn btn-success">
                    发布话题
                  </button>
                </a>
              </div>
            </div>
            <% } %>
              <div class="mt-3">
                <a href="#">
                  <img src="/images/FgQS-GQD" width="350" height="120">
                </a>
              </div>
    </div>
  </div>


  <%-include footer%>