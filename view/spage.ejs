<%- include header%>
  <div class="d-flex justify-content-center">
    <div class="col-9">
      <div>
        <div class='header'>
          <ol class='breadcrumb'>
            <li>
              <a href='/home'>主页</a>
              <span class='divider'>/</span>
            </li>
          </ol>
        </div>
        <hr>
        <div class='inner'>
          <div class='user_card'>
            <div>
              <a class='user_avatar' href="/user/<%=topics.user%>">
                <img src="/images/7081645.png"  width="30" height="30" alt="Generic placeholder image"  />
              </a>
              <span class='user_'>
                <a class='dark' href="/user/<%=topics.user%>">
                  <%= topics.username %>
                </a>
              </span>

              <div class='board clearfix'>
                <div class='floor'>
                  <span class='big'>积分</span>
                </div>
              </div>
              <div class="space clearfix">
                <span class='coll'>话题收藏</span>
              </div>
              <a></a>
              <a></a>
              <a></a>
              <a></a>
              <p>注册时间</p>
            </div>
          </div>
        </div>
      </div>
      <div>
        <div class="header">最近新建的话题</div>
        <div class='inner'>
          <div class="list-group">
            <%topics.forEach(function(res){%>
              <%if(res['tabValue']=='share'||res['tabValue']=='ask'){%>
                <div class="list-group-item list-group-item-action ">
                  <div class="media">
                    <img class="mr-3 " src="./images/3118295.jpg" width="40" height="40" alt="Generic placeholder image">
                    <div class="media-body align-self-center d-flex  justify-content-between">
                      <div>
                        <%=res['replies']%>/
                          <small>
                            <%=res['clicks']%>
                          </small>
                          <span class="badge badge-success">置顶</span>
                          <a href="/topic/<%=res['id']%>">
                            <%=res['title']%>
                          </a>
                      </div>
                      <div class="col-2 d-flex  justify-content-between">
                        <img src="./images/7081645.png" width="30" height="30" alt="Generic placeholder image">
                        <small class="align-self-center">13分钟前</small>
                      </div>
                    </div>
                  </div>
                </div>
                <%}%>
                  <%})%>
          </div>
        </div>
      </div>
      <div>
        <div class="header">最近参与的话题</div>
        <div class='inner'>
          <div class="list-group">
            <%topics.forEach(function(res){%>
              <%if(res['tabValue']=='share'||res['tabValue']=='ask'){%>
                <div class="list-group-item list-group-item-action ">
                  <div class="media">
                    <img class="mr-3 " src="./images/3118295.jpg" width="40" height="40" alt="Generic placeholder image">
                    <div class="media-body align-self-center d-flex  justify-content-between">
                      <div>
                        <%=res['replies']%>/
                          <small>
                            <%=res['clicks']%>
                          </small>
                          <span class="badge badge-success">置顶</span>
                          <a href="/topic/<%=res['id']%>">
                            <%=res['title']%>
                          </a>
                      </div>
                      <div class="col-2 d-flex  justify-content-between">
                        <img src="./images/7081645.png" width="30" height="30" alt="Generic placeholder image">
                        <small class="align-self-center">13分钟前</small>
                      </div>
                    </div>
                  </div>
                </div>
                <%}%>
                  <%})%>
          </div>
        </div>
      </div>
    </div>
    <div class="col-2.5">
      <div class='panel bg-white p-3 mb-3'>

        <div class='header  bg-secondary'>
          <span class='col_fade'>个人信息</span>
        </div>
        <div class='inner'>
          <div class='user_card'>
            <div>
              <a class='user_avatar' href="/user/<%=session.user.name%>">
                <img src="#" title="<%=session.user.name%>" />
              </a>
              <span class='user_name'>
                <a class='dark' href="/user/<%=session.user.name%>">
                  <%=session.user.name%>
                </a>
              </span>

              <div class='board clearfix'>
                <div class='floor'>
                  <span class='big'>积分: 0 </span>
                </div>
              </div>
              <div class="space clearfix"></div>
              <span class="signature">
                “这家伙很懒，什么个性签名都没有留下。”
              </span>
            </div>
          </div>
        </div>
      </div>
      <div class="panel">
        <div class='inner bg-white p-3 mb-3'>
          <a href='/topic/create' id='create_topic_btn'>
            <span class='bg-success'>发布话题</span>
          </a>
        </div>
      </div>
      <div>
        <a href="#">
          <img src="./images/FgQS-GQD" width="300" height="120">
        </a>
      </div>
    </div>
  </div>
  <%- include footer%>