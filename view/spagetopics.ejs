
<!-- 个人创建话题页 -->
<%- include header%>
  <div class="container d-flex justify-content-center mt-3">
    <div class="col-8">
      <div class="breadcrumb">
        <a href="/home">主页</a>
        <span class="divider">/</span>
        <a href='/user/<%=user.name%>'>
          <%=user.name%>的主页</a>
      </div>
      <div class="card my-3">
        <div class="card-header">
          <%=user.name%>创建的话题</div>
        <div>
          <%topics.forEach(function(res){%>
            <div class="list-group-item list-group-item-action ">
              <div class="media">
                <img class="mr-3 " src="/images/2081487.jpg" width="40" height="40" alt="Generic placeholder image">
                <div class="media-body align-self-center d-flex  justify-content-between">
                  <div>
                    <%=res['replies']%>/
                      <small>
                        <%=res['clicks']%>
                      </small>
                      <a href="/topic/<%=res['id']%>">
                        <%=res['title']%>
                      </a>
                  </div>
                  <div class="col-2 d-flex  justify-content-between">
                    <img src="/images/7081645.png" width="30" height="30" alt="Generic placeholder image">
                    <small class="align-self-center">
                      <%=res['lastreplyfromnow']%>
                    </small>
                  </div>
                </div>
              </div>
            </div>
            <%})%>
        </div>
      </div>
    </div>
    <div class="col-2.5">     
            <div class='card bg-white '>
              <div class='card-header  '>
                个人信息
              </div>
              <div class='card-body'>
                <div class='user_card'>
                  <div>
                    <a class='user_avatar' href="/user/<%=user.name%>">
                      <img src="/images/7081645.png" width="40" height="40" alt="Generic placeholder image" />
                    </a>
                    <span class='user_name'>
                      <a class='dark' href="/user/<%=user.name%>">
                        <%=user.name%>
                      </a>
                    </span>

                    <div class='board clearfix'>
                      <div class='floor'>
                        <span class='big'>积分:
                          <%=user.integral%>
                        </span>
                      </div>
                    </div>
                    <div class="space clearfix"></div>
                    <%if(user.sign==null){%>
                      <span class="signature">
                        “这家伙很懒，什么个性签名都没有留下。”
                      </span>
                      <%}%>
                        <%if(user.sign!=null){%>
                          <span class="signature">
                            <%=user.sign%>
                          </span>
                          <%}%>
                  </div>
                </div>
              </div>
            </div>
            <div class="panel">
              <div class='inner bg-white p-3 mt-3'>
                <a href='/topic/create' id='create_topic_btn'>
                  <button type="button" class="btn btn-success">
                    发布话题
                  </button>
                </a>
              </div>
            </div>
            
              <div class="mt-3">
                <a href="#">
                  <img src="/images/FgQS-GQD" width="350" height="120">
                </a>
              </div>
    </div>
  </div>
  <%- include footer%>