  <script>
    $(document).ready(
    function paging(page) {
      $.ajax({
        type: "GET",
        url: '/home/all/' + (page - 1),
        dataType: "json",
        success: function (msg) {

        }
      });

      var option = {
        currentPage: 1,
        size: 'normal',
        bootstrapMajorVertion: 3,
        numberOfPages: 5,
        totalPages: 10,
        itemTexts: function (type, page, current) {
          switch (type) {
            case "first":
              return "首页";
            case "prev":
              return "上一页";
            case "next":
              return "下一页";
            case "last":
              return "末页";
            case "page":
              return page;
          }
        },
        onPageClicked: function (event, originalEvent, type, page) {
          $.ajax({
            url: '/home/all',
            type: "POST",
            data: {
              "page": page
            },
            dataType: 'json',
            success: function (data) {

            }
          })
        }
      }
      $('.paginationall').bootstrapPaginator(option);
      })
  </script>
